{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cp app-server.js /app/server.js 2>/dev/null || true"
  },
  "deploy": {
    "startCommand": "node /app/server.js 2>/dev/null || node app-server.js || node server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30
  }
}
